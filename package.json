{
    "name": "tiro-website",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "dev": "next dev",
        "build": "next build",
        "start": "next start",
        "export": "next build && next export",
        "clean": "rimraf .next out",
        "prettier": "prettier \"./**/*.{js,jsx,ts,tsx,html,md,mdx,json}\" --write",
        "lint": "eslint \"src\" --ext js,jsx,ts,tsx",
        "check-types": "tsc --noEmit",
        "init-site": "git worktree add site site",
        "deploy:clean": "rimraf \"site/*\"",
        "deploy:build": "npm-run-all clean export",
        "deploy:copy": "cp -r out/* site/",
        "deploy:push": "cd site && git add -A && git commit --allow-empty -m \"Deploy site\" && git push --force",
        "deploy": "npm-run-all deploy:clean deploy:build deploy:copy deploy:push",
        "update-monaco-assets": "rimraf public/monaco && mkdir -p public/monaco && cp -r node_modules/monaco-editor/min/* public/monaco/"
    },
    "devDependencies": {
        "@blueprintjs/core": "^3.42.0",
        "@monaco-editor/react": "^4.1.3",
        "@svgr/webpack": "^5.5.0",
        "@types/emscripten": "^1.39.4",
        "@types/node": "^14.14.37",
        "@types/react": "^17.0.3",
        "@types/react-inspector": "^4.0.1",
        "@typescript-eslint/eslint-plugin": "^4.20.0",
        "@typescript-eslint/parser": "^4.20.0",
        "eslint": "^7.25.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^3.4.0",
        "eslint-plugin-react": "^7.23.2",
        "eslint-plugin-react-hooks": "^4.2.0",
        "fast-glob": "^3.2.5",
        "file-loader": "^6.2.0",
        "gray-matter": "^4.0.3",
        "immutable": "^4.0.0-rc.12",
        "monaco-editor": "^0.24.0",
        "next": "^10.2.0",
        "next-mdx-remote": "^2.1.4",
        "next-plugin-preval": "^1.0.0",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.2.1",
        "prism-react-renderer": "^1.2.0",
        "react": "^17.0.2",
        "react-dom": "17.0.2",
        "react-inspector": "^5.1.1",
        "react-split": "^2.0.11",
        "rehype-autolink-headings": "^5.0.1",
        "remark-heading-id": "^1.0.0",
        "remark-slug": "^6.0.0",
        "rimraf": "^3.0.2",
        "sass": "^1.32.12",
        "stringify-object": "^3.3.0",
        "typescript": "^4.2.4",
        "webpack": "^4.0.0",
        "webpack-bundle-analyzer": "^4.4.1"
    }
}
